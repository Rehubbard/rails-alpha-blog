<h1 style="text-align: center; margin-bottom: 25px;">All Categories</h1>
<%= will_paginate %>
<% @categories.each do |category| %>
  <ul class='listing'>
    <div class="row">
      <div class="well col-md-4 col-md-offset-4 center">
        <li class='article-title'><%= link_to "#{category.name}", category_path(category) %></li>
      </div>
    </div>
  </ul>
<% end %>
<%= will_paginate %>