<h1 style="text-align: center; margin-bottom: 25px;">Welcome to <%= @user.username %>'s page</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @user, size: 150 %>
  </div>
</div>

<h4 style="text-align: center; margin-bottom: 25px;" ><%= @user.username %>'s articles:</h4>
<div align="center">
  <%= will_paginate @user_articles %>
</div>
<%= render 'articles/article', obj: @user_articles %>